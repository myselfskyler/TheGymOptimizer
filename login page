    private void jTextField1FocusGained(java.awt.event.FocusEvent evt) {                                        
        // Hide the label when the text field gains focus
    jLabel2.setVisible(false);

    // Check if the text field contains the default text
    if (jTextField1.getText().equals("enter username")) {
        // Clear the text field and set the text color
        jTextField1.setText("");
        jTextField1.setForeground(new Color(0, 118, 221));
    }
}
    }                                       

    private void jTextField1FocusLost(java.awt.event.FocusEvent evt) {                                      
          // Hide the label when the text field loses focus
    jLabel2.setVisible(false);

    // Check if the text field is empty
    if (jTextField1.getText().trim().isEmpty()) {
        // Reset the text field to the default text and set the text color
        jTextField1.setText("enter username");
        jTextField1.setForeground(new Color(150, 150, 150)); // Use a lighter color for placeholder text
    }
    }                                     

    private void jPasswordField1FocusGained(java.awt.event.FocusEvent evt) {                                            
       // Hide the label when the password field gains focus
    jLabel2.setVisible(false);

    // Check if the password field contains the default placeholder text
    char[] password = jPasswordField1.getPassword();
    String passwordText = new String(password);

    if (passwordText.equals("Enter password")) {
        // Clear the password field and set the text color
        jPasswordField1.setText("");
        jPasswordField1.setForeground(new Color(0, 118, 221));
    }
    }                                           

    private void jPasswordField1FocusLost(java.awt.event.FocusEvent evt) {                                          
      // Hide the label when the password field loses focus
    jLabel2.setVisible(false);

    // Check if the password field is empty
    char[] password = jPasswordField1.getPassword();
    if (password.length == 0) {
        // Reset the password field to the default placeholder text and set the text color
        jPasswordField1.setText("Enter password");
        jPasswordField1.setForeground(new Color(150, 150, 150)); // Use a lighter color for placeholder text
    }
    }                                         

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
int a=JOptionPane.showConfirmDialog(null,"Do You really Want To Exit Application","Select",JOptionPane.YES_NO_OPTION);
    if(a==0)
    {
    System.exit(0);
    }// TODO add your handling code here:
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    // Retrieve the username and password
    String username = jTextField1.getText();
    String password = new String(jPasswordField1.getPassword()); // Use getPassword() for JPasswordField

    // Check if the username and password are correct
    if (username.equals("gmp") && password.equals("admin")) {
        // Hide the current window
//        setVisible(false);

        // Open the home window
        home homeWindow = new home();
        homeWindow.setVisible(true);
    } else {
        // Show an error message (e.g., incorrect username or password)
        jLabel2.setVisible(true);
    }
    }                                        

    private void jCheckBox1ActionPerformed(java.awt.event.ActionEvent evt) {                                           
      if (jCheckBox1.isSelected()) {
        // Show the password (no echo character)
        jPasswordField1.setEchoChar((char) 0);
    } else {
        // Hide the password (set echo character to '*')
        jPasswordField1.setEchoChar('*');
    }
    }                                          

